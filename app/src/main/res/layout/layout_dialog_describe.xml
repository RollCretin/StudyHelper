<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/dialog_item_bg_selector_all"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_selector_left_right_top_common_color"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:text="请为本套测评添加一个描述"
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/ed_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="left"
        android:hint="请输入描述..."
        android:minLines="3"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:textColor="@color/black_333333"
        android:textSize="14sp">
    </EditText>

    <include layout="@layout/line"/>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:text="点击选择测评所属的类型 >"
        android:textColor="@color/black_333333"
        android:textSize="14sp">
    </TextView>

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/bg_button_round100"
        android:gravity="center"
        android:padding="10dp"
        android:text="发布测评"
        android:textColor="@color/white"/>

</LinearLayout>