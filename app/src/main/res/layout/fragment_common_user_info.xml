<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.cretin.studyhelper.view.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@mipmap/avatar"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="用户昵称"
                android:textColor="#2e2e2e"
                android:textSize="@dimen/text_size_14"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:background="#d8d8d8"/>

            <TextView
                android:id="@+id/tv_yonghuming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="用户未填写"
                android:paddingBottom="25dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="25dp"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="用户签名"
                android:textColor="#2e2e2e"
                android:textSize="@dimen/text_size_14"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:background="#d8d8d8"/>

            <TextView
                android:id="@+id/tv_qianming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="用户未填写"
                android:paddingBottom="25dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="25dp"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_tiezi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/arrow_right"
                android:gravity="center_vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:background="@drawable/item_bg_selector"
                android:paddingRight="10dp"
                android:paddingTop="16dp"
                android:text="用户发布的帖子"
                android:textColor="@color/font_black1"
                android:textSize="@dimen/text_size_14"/>

            <include layout="@layout/left_padding_line"/>

            <TextView
                android:id="@+id/tv_ceping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/arrow_right"
                android:gravity="center_vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:background="@drawable/item_bg_selector"
                android:paddingTop="16dp"
                android:text="用户发布的测评"
                android:textColor="@color/font_black1"
                android:textSize="@dimen/text_size_14"/>

            <include layout="@layout/left_padding_line"/>

            <TextView
                android:id="@+id/tv_fenxiang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/arrow_right"
                android:gravity="center_vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:background="@drawable/item_bg_selector"
                android:paddingTop="16dp"
                android:text="用户分享的内容"
                android:textColor="@color/font_black1"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
