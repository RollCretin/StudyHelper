<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_bg_color"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg_selector"
                android:clickable="true">

                <com.cretin.studyhelper.view.CircleImageView
                    android:id="@+id/iv_portrait"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="16dp"
                    android:src="@mipmap/avatar"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_portrait">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name"
                        android:text="账号: 13713788888"
                        android:textColor="@color/font_black2"
                        android:textSize="@dimen/text_size_14"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:paddingBottom="5dp"
                        android:text="林小妹"
                        android:textColor="@color/font_black1"
                        android:textSize="17sp"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/arrow_right"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_clearcache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/setting"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="12dp"
                        android:text="清除缓存"
                        android:textColor="@color/font_black1"
                        android:textSize="@dimen/text_size_14"/>

                    <TextView
                        android:id="@+id/tv_cache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/arrow_right"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:text="10.8M"
                        android:textColor="@color/font_black4"
                        android:textSize="@dimen/text_size_14"/>
                </LinearLayout>

                <include layout="@layout/left_padding_line"/>

                <TextView
                    android:id="@+id/tv_yonghuxieyi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg_selector"
                    android:drawableLeft="@mipmap/yhxy"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="10dp"
                    android:paddingTop="12dp"
                    android:text="用户协议"
                    android:textColor="@color/font_black1"
                    android:textSize="@dimen/text_size_14"/>

                <LinearLayout
                    android:id="@+id/ll_mylove"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <include layout="@layout/left_padding_line"/>

                    <TextView
                        android:id="@+id/tv_my_love"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_bg_selector"
                        android:drawableLeft="@mipmap/xgmm"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/arrow_right"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="10dp"
                        android:paddingTop="12dp"
                        android:text="我的收藏"
                        android:textColor="@color/font_black1"
                        android:textSize="@dimen/text_size_14"/>
                </LinearLayout>

                <include layout="@layout/left_padding_line"/>

                <TextView
                    android:id="@+id/tv_forget_psw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg_selector"
                    android:drawableLeft="@mipmap/xgmm"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="10dp"
                    android:paddingTop="12dp"
                    android:text="修改密码"
                    android:textColor="@color/font_black1"
                    android:textSize="@dimen/text_size_14"/>

                <include layout="@layout/left_padding_line"/>

                <TextView
                    android:id="@+id/tv_wodedingdan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg_selector"
                    android:drawableLeft="@mipmap/xgmm"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="10dp"
                    android:paddingTop="12dp"
                    android:text="我的订单"
                    android:textColor="@color/font_black1"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone"/>

                <include layout="@layout/left_padding_line"/>

                <TextView
                    android:id="@+id/tv_wodejiedan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg_selector"
                    android:drawableLeft="@mipmap/xgmm"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="10dp"
                    android:paddingTop="12dp"
                    android:text="我的接单"
                    android:textColor="@color/font_black1"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone"/>

                <include layout="@layout/left_padding_line"/>

                <TextView
                    android:id="@+id/tv_pinglunwode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg_selector"
                    android:drawableLeft="@mipmap/xgmm"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="10dp"
                    android:paddingTop="12dp"
                    android:text="评论我的"
                    android:textColor="@color/font_black1"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_bg_selector"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:paddingBottom="14dp"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:paddingTop="14dp"
                android:text="安全退出"
                android:textColor="@color/app_title_color"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>